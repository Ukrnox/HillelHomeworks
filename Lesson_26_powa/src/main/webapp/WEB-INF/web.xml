<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>Lesson 26 Plain Old Web Application</display-name>

    <servlet>
        <servlet-name>simple</servlet-name>
        <servlet-class>my.servlet.ServletDemo</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>captcha</servlet-name>
        <servlet-class>my.servlet.Captcha</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>hello</servlet-name>
        <servlet-class>my.servlet.HelloServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>captcha</servlet-name>
        <url-pattern>/captcha</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>simple</servlet-name>
        <url-pattern>/demo</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

</web-app>
